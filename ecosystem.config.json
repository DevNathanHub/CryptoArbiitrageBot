{
  "apps": [
    {
      "name": "crypto-arbitrage-bot",
      "script": "./index.js",
      "args": "--cron",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "restart_delay": 4000,
      "kill_timeout": 5000,
      "listen_timeout": 3000,
      "cron_restart": "0 4 * * *",
      "exp_backoff_restart_delay": 100
    }
  ]
}
